<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.display.DisplayEntriesFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="@dimen/min_clickable_size"
        android:minHeight="@dimen/min_clickable_size"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/md_theme_primary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Add entry"
            android:src="@drawable/baseline_add_24"
            android:layout_gravity="center"
            android:padding="8dp"/>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>